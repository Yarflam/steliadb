{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": false,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "no-console": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "react/prop-types": 0
    },
    "settings": {
        "propWrapperFunctions": ["forbidExtraProps"]
    }
}
